<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="csdc.bean.Friend" table="T_FRIEND" >
        <id name="id" type="java.lang.String">
            <column name="C_ID" length="40" />
            <generator class="uuid.hex" />
        </id>
        <many-to-one name="person" class="csdc.bean.Person" fetch="select">
            <column name="C_PERSON_ID" length="40" not-null="true" />
        </many-to-one>
        
        <many-to-one name="friend" class="csdc.bean.Person" fetch="select">
            <column name="C_FRIEND_ID" length="40" not-null="true" />
        </many-to-one>
        
        <property name="friendName" type="java.lang.String">
        	<column name="C_FRIEND_NAME" length="400" not-null="true" />
        </property>
        
         <property name="refuse" type="java.lang.String">
        	<column name="C_REFUSE" length="800" />
        </property>
        
        <property name="reason" type="java.lang.String">
        	<column name="C_REASON" length="800" not-null="true" />
        </property>
        
        <property name="type" type="java.lang.Integer">
        	<column name="C_TYPE" precision="1" scale="0" not-null="true" />
        </property>
        
         <property name="date" type="java.util.Date">
            <column name="C_DATE" length="7" />
        </property>
        
    </class>
</hibernate-mapping>