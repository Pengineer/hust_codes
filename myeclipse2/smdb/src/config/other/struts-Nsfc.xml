<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<package name="nsfc" extends="main" namespace="/other/nsfc/granted">

		<action name="toList" class="nsfcAction" method="toList">
			<result>/other/nsfc/granted/list.jsp</result>
		</action>

		<action name="list" class="nsfcAction" method="list">
			<result type="json"><param name="root">jsonMap</param></result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>

		<action name="simpleSearch" class="nsfcAction" method="simpleSearch">
			<result type="chain">list</result>
		</action>
		
		<action name="sort" class="nsfcAction" method="sort">
			<result type="chain">list</result>
		</action>

		<action name="changePageSize" class="nsfcAction" method="changePageSize">
			<result type="chain">list</result>
		</action>

		<action name="toPage" class="nsfcAction" method="toPage">
			<result type="chain">list</result>
		</action>

		<action name="toViewTask" class="nsfcAction" method="toViewTask">
			<result>/other/nsfc/granted/viewTask.jsp</result>
		</action>

		<action name="viewTask" class="nsfcAction" method="viewTask">
			<result type="json"><param name="root">jsonMap</param></result>
		</action>

		<action name="update" class="nsfcAction" method="update">
			<result type="json"><param name="root">jsonMap</param></result>
		</action>

	</package>

</struts>
