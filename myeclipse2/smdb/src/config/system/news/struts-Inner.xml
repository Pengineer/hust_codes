<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<package name="newsInner" extends="main" namespace="/news/inner">
		
		<action name="toAdd" class="newsInnerAction" method="toAdd">
			<result>/system/news/inner/add.jsp</result>
		</action>
		
		<action name="add" class="newsInnerAction" method="add">
			<result type="redirectAction">
				<param name="actionName">toView</param>
				<param name="entityId">${entityId}</param>
			</result>
			<result name="input">/system/news/inner/add.jsp</result>
		</action>
		
		<action name="toModify" class="newsInnerAction" method="toModify">
			<result>/system/news/inner/modify.jsp</result>
		</action>
		
		<action name="modify" class="newsInnerAction" method="modify">
			<result type="redirectAction">
				<param name="actionName">toView</param>
				<param name="entityId">${entityId}</param>
				<param name="update">1</param>
			</result>
			<result name="input">/system/news/inner/modify.jsp</result>
		</action>
		
		<action name="toView" class="newsInnerAction" method="toView">
			<result>/system/news/inner/view.jsp</result>
		</action>
		
		<action name="view" class="newsInnerAction" method="view">
			<result type="json"><param name="root">jsonMap</param></result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>
		
		<action name="download" class="newsInnerAction" method="download">
			<result name="success" type="stream">
				<param name="inputName">targetFile</param>
				<param name="contentDisposition">attachment;filename="${attachmentName}"</param>
				<param name="contentType">application/octet-stream</param>
				<param name="bufferSize">10240000</param>
			</result>
		</action>
		
		<action name="validateFile" class="newsInnerAction" method="validateFile">
			<result type="json"><param name="root">jsonMap</param></result>
			<result type="json" name="input"><param name="root">jsonMap</param></result>	
		</action>
		
		<action name="prev" class="newsInnerAction" method="prev">
			<result type="redirectAction">
				<param name="actionName">view</param>
				<param name="entityId">${entityId}</param>
			</result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>

		<action name="next" class="newsInnerAction" method="next">
			<result type="redirectAction">
				<param name="actionName">view</param>
				<param name="entityId">${entityId}</param>
			</result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>
		
		<action name="delete" class="newsInnerAction" method="delete">
			<result type="json"><param name="root">jsonMap</param></result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>

		<action name="toList" class="newsInnerAction" method="toList">
			<result>/system/news/inner/list.jsp</result>
		</action>
		
		<action name="list" class="newsInnerAction" method="list">
			<result type="json"><param name="root">jsonMap</param></result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>
		
		<action name="simpleSearch" class="newsInnerAction" method="simpleSearch">
			<result type="chain">list</result>
		</action>
		
<!-- 		<action name="toAdvSearch" class="newsInnerAction" method="toAdvSearch"> -->
<!-- 			<result>/system/news/inner/advSearch.jsp</result> -->
<!-- 		</action> -->
		
		<action name="advSearch" class="newsInnerAction" method="advSearch">
			<result type="chain">list</result>
			<result name="input">/system/news/inner/list.jsp</result>
		</action>
		
		<action name="sort" class="newsInnerAction" method="sort">
			<result type="chain">list</result>
		</action>
		
		<action name="changePageSize" class="newsInnerAction" method="changePageSize">
			<result type="chain">list</result>
		</action>
		
		<action name="toPage" class="newsInnerAction" method="toPage">
			<result type="chain">list</result>
		</action>
		
	</package>

</struts>