<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <package name="business" extends="main" namespace="/business"> 
   	    
   	    <action name="toList" class="businessAction" method="toList">
			<result>/system/business/list.jsp</result>
		</action>

		<action name="list" class="businessAction" method="list">
			<result type="json"><param name="root">jsonMap</param></result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>
		
		<action name="sort" class="businessAction" method="sort">
			<result type="chain">list</result>
		</action>

		<action name="changePageSize" class="businessAction" method="changePageSize">
			<result type="chain">list</result>
		</action>

		<action name="toPage" class="businessAction" method="toPage">
			<result type="chain">list</result>
		</action>

		<action name="simpleSearch" class="businessAction" method="simpleSearch">
			<result type="chain">list</result>
		</action>
		
		<action name="advSearch" class="businessAction" method="advSearch">
			<result type="chain">list</result>
		</action>
		
		<action name="toAdd" class="businessAction" method="toAdd">
		 	 <result>/system/business/add.jsp</result>
		</action>
		
		<action name="add" class="businessAction" method="add">
			<result type="redirectAction">
				<param name="actionName">toView</param>
				<param name="entityId">${entityId}</param>
			</result>
			<result name="input">/system/business/add.jsp</result>
		</action>
		
		<action name="toModify" class="businessAction" method="toModify">
			<result>/system/business/modify.jsp</result>
		</action>
		
		<action name="modify" class="businessAction" method="modify">
			<result type="redirectAction">
				<param name="actionName">toView</param>
				<param name="entityId">${entityId}</param>
				<param name="update">1</param>
			</result>
			<result name="input">/system/business/modify.jsp</result>
		</action>

   	    <action name="toView" class="businessAction" method="toView">
	        <result>/system/business/view.jsp</result>
	    </action>
	    
	    <action name="view" class="businessAction" method="view">
	    	<result type="json"><param name="root">jsonMap</param></result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
	    </action>
	   			
	   	<action name="delete" class="businessAction" method="delete">
			<result type="json"><param name="root">jsonMap</param></result>
	   		<result type="json" name="input"><param name="root">jsonMap</param></result>
	   	</action>
	   	
	   	<action name="prev" class="businessAction" method="prev">
			<result type="redirectAction">
				<param name="actionName">view</param>
				<param name="entityId">${entityId}</param>
				<param name="pageNumber">${pageNumber}</param>
				<param name="listType">${listType}</param>
			</result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>
		
		<action name="next" class="businessAction" method="next">
			<result type="redirectAction">
				<param name="actionName">view</param>
				<param name="entityId">${entityId}</param>
				<param name="pageNumber">${pageNumber}</param>
				<param name="listType">${listType}</param>
			</result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>
	    
    </package> 
    
</struts>

