<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<package name="systemOption" extends="main" namespace="/system/option">
		
		<action name="toView" class="systemOptionAction" method="toView">
			<result>/system/option/view.jsp</result>
		</action>
		
		<action name="queryNodesTitleByParentId" class="systemOptionAction" method="queryNodesTitleByParentId">
			<result type="json">
				<param name="root">nodesInfo</param>
			</result>
		</action>
		
		<action name="queryNodesDetailByParentId" class="systemOptionAction" method="queryNodesDetailByParentId">
			<result type="json">
				<param name="root">nodesInfo</param>
			</result>
		</action>
		
		<action name="toList" class="systemOptionAction" method="toList">
			<result>/system/option/list.jsp</result>
		</action>
		
		<action name="list" class="systemOptionAction" method="list">
			<result type="json"><param name="root">jsonMap</param></result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>
		
		<action name="simpleSearch" class="systemOptionAction" method="simpleSearch">
			<result type="chain">list</result>
		</action>
		
		<action name="sort" class="systemOptionAction" method="sort">
			<result type="chain">list</result>
		</action>
		
		<action name="toPage" class="systemOptionAction" method="toPage">
			<result type="chain">list</result>
		</action>
		
		<action name="changePageSize" class="systemOptionAction" method="changePageSize">
			<result type="chain">list</result>
		</action>
		
	</package>

</struts>
