<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    
    <joined-subclass name="csdc.bean.Paper" extends="csdc.bean.Product" table="T_PAPER">
    	<key column="C_ID"/>
        <property name="isTranslation" type="java.lang.Integer">
            <column name="C_IS_TRANSLATION" precision="1" scale="0" />
        </property>
        <property name="wordNumber" type="java.lang.Double">
            <column name="C_WORD_NUMBER" precision="4" scale="1" />
        </property>
           <property name="publication" type="java.lang.String">
            <column name="C_PUBLICATION" length="400" />
        </property>
        <property name="volume" type="java.lang.String">
            <column name="C_VOLUME" length="400" />
        </property>
        <property name="number" type="java.lang.String">
            <column name="C_NUMBER" length="400" />
        </property>
        <property name="page" type="java.lang.String">
            <column name="C_PAGE" length="40" />
        </property>
           <property name="issn" type="java.lang.String">
            <column name="C_ISSN" length="40" />
        </property>
        <property name="cn" type="java.lang.String">
            <column name="C_CN" length="40" />
        </property>
           <property name="publicationDate" type="java.util.Date">
            <column name="C_PUBLICATION_DATE" length="7" />
        </property> 
           <property name="index" type="java.lang.String">
            <column name="C_INDEX" length="400" />
        </property> 
        <many-to-one name="type" class="csdc.bean.SystemOption" fetch="select">
            <column name="C_SUBTYPE_ID" length="40" />
        </many-to-one>
        <many-to-one name="publicationScope" class="csdc.bean.SystemOption" fetch="select">
            <column name="C_PUBLICATION_SCOPE_ID" length="40" />
        </many-to-one>
    </joined-subclass>
    
</hibernate-mapping>