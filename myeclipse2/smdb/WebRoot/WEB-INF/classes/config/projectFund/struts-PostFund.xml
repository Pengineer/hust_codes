<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="PostFund" extends="main" namespace="/projectFund/post">
	
		<action name="toList" class="PostFundAction" method="toList">
			<result>/projectFund/postFund/list.jsp</result>
		</action>

		<action name="list" class="PostFundAction" method="list">
			<result type="json"><param name="root">jsonMap</param></result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>
		
		<action name="simpleSearch" class="PostFundAction" method="simpleSearch">
			<result type="chain">list</result>
		</action>
		
		<action name="advSearch" class="PostFundAction" method="advSearch">
			<result type="chain">list</result>
		</action>
		
		<action name="sort" class="PostFundAction" method="sort">
			<result type="chain">list</result>
		</action>

		<action name="changePageSize" class="PostFundAction" method="changePageSize">
			<result type="chain">list</result>
		</action>

		<action name="toPage" class="PostFundAction" method="toPage">
			<result type="chain">list</result>
		</action>
		
		<!-- 进入查看页面 -->
		<action name="toView" class="PostFundAction" method="toView">
	        <result>/projectFund/postFund/view.jsp</result>
	    </action>
	    
	    <!-- 查看 -->
	    <action name="view" class="PostFundAction" method="view">
	    	<result type="json"><param name="root">jsonMap</param></result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
	    </action>
	    
	    <!-- 导出 -->
	    <action name="confirmExportOverView" class="PostFundAction" method="confirmExportOverView">
        	<result name="success" type="stream">
				<param name="contentType">application/vnd.ms-excel</param>
				<param name="contentDisposition">attachment;fileName="${fileFileName}"</param>
				<param name="inputName">downloadFile</param>
			</result>
	   	</action>
	   	
	</package>
</struts>