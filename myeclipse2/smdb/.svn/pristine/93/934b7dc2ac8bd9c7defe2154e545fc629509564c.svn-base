<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<package name="selectStudent" extends="main" namespace="/selectStudent">
		
		<action name="toList" class="selectStudentAction" method="toList">
			<result>/pop/select/selectStudent.jsp</result>
		</action>

		<action name="list" class="selectStudentAction" method="list">
			<result type="json"><param name="root">jsonMap</param></result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>
		
		<action name="simpleSearch" class="selectStudentAction" method="simpleSearch">
			<result type="chain">list</result>
		</action>
		
		<action name="sort" class="selectStudentAction" method="sort">
			<result type="chain">list</result>
		</action>
		
		<action name="toPage" class="selectStudentAction" method="toPage">
			<result type="chain">list</result>
		</action>
	</package>
</struts>