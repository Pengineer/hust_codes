<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<package name="accountMinistryMain" extends="main" namespace="/account/ministry/main">

		<action name="toAdd" class="accountMinistryMainAction" method="toAdd">
			<result>/security/account/ministry/main/add.jsp</result>
		</action>

		<action name="add" class="accountMinistryMainAction" method="add">
			<result type="redirectAction">
				<param name="actionName">toView</param>
				<param name="entityId">${entityId}</param>
				<param name="pageInfo">${pageInfo}</param>
			</result>
			<result name="input">/security/account/ministry/main/add.jsp</result>
		</action>
		
		<action name="toView" class="accountMinistryMainAction" method="toView">
			<result>/security/account/ministry/main/view.jsp</result>
		</action>
		
		<action name="view" class="accountMinistryMainAction" method="view">
			<result type="json"><param name="root">jsonMap</param></result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>

		<action name="toModify" class="accountMinistryMainAction" method="toModify">
			<result>/security/account/ministry/main/modify.jsp</result>
		</action>

		<action name="modify" class="accountMinistryMainAction" method="modify">
			<result type="redirectAction">
				<param name="actionName">toView</param>
				<param name="entityId">${entityId}</param>
				<param name="update">1</param>
			</result>
			<result name="input">/security/account/ministry/main/modify.jsp</result>
		</action>

		<action name="delete" class="accountMinistryMainAction" method="delete">
			<result type="json"><param name="root">jsonMap</param></result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>

		<action name="toList" class="accountMinistryMainAction" method="toList">
			<result>/security/account/ministry/main/list.jsp</result>
		</action>
		
		<action name="list" class="accountMinistryMainAction" method="list">
			<result type="json"><param name="root">jsonMap</param></result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>
		
		<action name="simpleSearch" class="accountMinistryMainAction" method="simpleSearch">
			<result type="chain">list</result>
		</action>
		
<!-- 		<action name="toAdvSearch" class="accountMinistryMainAction" method="toAdvSearch"> -->
<!-- 			<result>/security/account/ministry/main/advSearch.jsp</result> -->
<!-- 		</action> -->
		
		<action name="advSearch" class="accountMinistryMainAction" method="advSearch">
			<result type="chain">list</result>
		</action>
		
		<action name="sort" class="accountMinistryMainAction" method="sort">
			<result type="chain">list</result>
		</action>
		
		<action name="changePageSize" class="accountMinistryMainAction" method="changePageSize">
			<result type="chain">list</result>
		</action>
		
		<action name="toPage" class="accountMinistryMainAction" method="toPage">
			<result type="chain">list</result>
		</action>
		
		<action name="prev" class="accountMinistryMainAction" method="prev">
			<result type="redirectAction">
				<param name="actionName">view</param>
				<param name="entityId">${entityId}</param>
			</result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>

		<action name="next" class="accountMinistryMainAction" method="next">
			<result type="redirectAction">
				<param name="actionName">view</param>
				<param name="entityId">${entityId}</param>
			</result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>
		
		<action name="toEnable" class="accountMinistryMainAction" method="toEnable">
			<result>/security/account/popEnable.jsp</result>
		</action>

		<action name="enable" class="accountMinistryMainAction" method="enable">
			<result type="json"><param name="root">jsonMap</param></result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>

		<action name="disable" class="accountMinistryMainAction" method="disable">
			<result type="json"><param name="root">jsonMap</param></result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>
		
		<action name="toAssignRole" class="accountMinistryMainAction" method="toAssignRole">
			<result>/security/account/popAssignRole.jsp</result>
		</action>

		<action name="assignRole" class="accountMinistryMainAction" method="assignRole">
			<result type="json"><param name="root">jsonMap</param></result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>
		
		<action name="retrieveCode" class="accountMinistryMainAction" method="retrieveCode">
			<result type="json"><param name="root">jsonMap</param></result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>
		
		<action name="toModifyPassword" class="accountMinistryMainAction" method="toModifyPassword">
			<result>/security/account/popModifyPassword.jsp</result>
		</action>
		
		<action name="modifyPassword" class="accountMinistryMainAction" method="modifyPassword">
			<result>/security/account/popModifyPassword.jsp</result>
			<result name="input">/security/account/popModifyPassword.jsp</result>
		</action>
		
		<!-- 对外接口 -->
		<action name="extIfToAdd" class="accountMinistryMainAction" method="extIfToAdd">
			<result>/security/account/extIf/popAdd.jsp</result>
		</action>
		
		<action name="extIfAdd" class="accountMinistryMainAction" method="extIfAdd">
			<result type="json"><param name="root">jsonMap</param></result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>

	</package>

</struts>