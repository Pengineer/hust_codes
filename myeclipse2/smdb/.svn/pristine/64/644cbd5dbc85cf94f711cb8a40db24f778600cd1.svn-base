<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="PostGrantedFundList" extends="main" namespace="/fundList/post/granted">
	
		<action name="toList" class="PostGrantedFundListAction" method="toList">
			<result>/fundList/post/granted/list.jsp</result>
		</action>

		<action name="list" class="PostGrantedFundListAction" method="list">
			<result type="json"><param name="root">jsonMap</param></result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>
		
		<action name="simpleSearch" class="PostGrantedFundListAction" method="simpleSearch">
			<result type="chain">list</result>
		</action>
		
		<action name="searchForUnitFundList" class="PostGrantedFundListAction" method="searchForUnitFundList">
			<result type="json"><param name="root">jsonMap</param></result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>
		
		<action name="advSearch" class="PostGrantedFundListAction" method="advSearch">
			<result type="chain">list</result>
		</action>
		
		<action name="sort" class="PostGrantedFundListAction" method="sort">
			<result type="chain">list</result>
		</action>

		<action name="changePageSize" class="PostGrantedFundListAction" method="changePageSize">
			<result type="chain">list</result>
		</action>

		<action name="toPage" class="PostGrantedFundListAction" method="toPage">
			<result type="chain">list</result>
		</action>
		
		<!-- 进入添加页面 -->
		<action name="toAdd" class="PostGrantedFundListAction" method="toAdd">
			<result>/fundList/post/add.jsp</result>
		</action>
		
		<!-- 添加 -->
		<action name="add" class="PostGrantedFundListAction" method="add">
			<result type="redirectAction">
				<param name="actionName">toView</param>
				<param name="entityId">${entityId}</param>
			</result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>
		
		<!-- 进入修改页面 -->
		<action name="toModify" class="PostGrantedFundListAction" method="toModify">
			<result>/fundList/modify.jsp</result>
		</action>
		
		<!-- 修改 -->
		<action name="modify" class="PostGrantedFundListAction" method="modify">
			<result type="json"><param name="root">jsonMap</param></result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>
		
		<!-- 进入修改金额页面 -->
		<action name="toModifyFee" class="PostGrantedFundListAction" method="toModifyFee">
			<result>/fundList/post/granted/modifyFee.jsp</result>
		</action>
		
		<!-- 修改 -->
		<action name="modifyFee" class="PostGrantedFundListAction" method="modifyFee">
			<result type="json"><param name="root">jsonMap</param></result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>
		
		<!-- 进入查看-->
		<action name="toView" class="PostGrantedFundListAction" method="toView">
			<result>/fundList/post/granted/view.jsp</result>
		</action>
		
		<!-- 查看 -->
	    <action name="view" class="PostGrantedFundListAction" method="view">
	    	<result type="json"><param name="root">jsonMap</param></result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
	    </action>
	    
	    <!-- 删除 -->
	    <action name="delete" class="PostGrantedFundListAction" method="delete">
			<result type="json"><param name="root">jsonMap</param></result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>
		
		<!-- 查看上条 -->
		<action name="prev" class="PostGrantedFundListAction" method="prev">
			<result type="redirectAction">
				<param name="actionName">view</param>
				<param name="entityId">${entityId}</param>
			</result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>
		
		<!-- 查看下条 -->
		<action name="next" class="PostGrantedFundListAction" method="next">
			<result type="redirectAction">
				<param name="actionName">view</param>
				<param name="entityId">${entityId}</param>
			</result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>
		
		<action name="fundListDelete" class="PostGrantedFundListAction" method="fundListDelete">
			<result type="json"><param name="root">jsonMap</param></result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>
		
		<action name="toAudit" class="PostGrantedFundListAction" method="toAudit">
			<result type="redirectAction">
				<param name="actionName">toView</param>
				<param name="entityId">${entityId}</param>
			</result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>
	</package>
</struts>