<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<package name="newsOuter" extends="main" namespace="/news/outer">
	
		<action name="view" class="newsOuterAction" method="view">
			<result>/system/news/outer/view.jsp</result>
		</action>
		
		<action name="download" class="newsOuterAction" method="download">
			<result type="stream">
				<param name="inputName">targetFile</param>
				<param name="contentDisposition">attachment;filename="${attachmentName}"</param>
				<param name="contentType">application/octet-stream</param>
				<param name="bufferSize">10240000</param>
			</result>
		</action>
		
		<action name="toList" class="newsOuterAction" method="toList">
			<result>/system/news/outer/list.jsp</result>
		</action>
		
		<action name="list" class="newsOuterAction" method="list">
			<result type="json"><param name="root">jsonMap</param></result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>
		
		<action name="simpleSearch" class="newsOuterAction" method="simpleSearch">
			<result type="chain">list</result>
		</action>
		
		<action name="sort" class="newsOuterAction" method="sort">
			<result type="chain">list</result>
		</action>
		
		<action name="toPage" class="newsOuterAction" method="toPage">
			<result type="chain">list</result>
		</action>
	</package>

</struts>