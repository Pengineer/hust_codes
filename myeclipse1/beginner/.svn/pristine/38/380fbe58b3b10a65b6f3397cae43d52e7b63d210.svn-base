@charset "UTF-8";
/**************************************************************************
 * 文件名：register.css
 *
 * 文件说明：
 *     主要用于user模块中注册及修改信息页面样式的定义。
 *
 * 历史记录：
 * 2010-02-24  龚凡：创建文件。
 * 2010-03-17  周中坚：修改文件使验证信息出现在文本框下方且无撑开的动作。
 *************************************************************************/

/****************************************************************
 * 与页面整体布局相关的样式。
 ***************************************************************/

/* 默认边距及字体属性 */
* {
	margin: 0;
	padding: 0;
	font-family: 宋体, Verdana, Arial, Helvetica, sans-serif;
	font-size: 10pt;
	background-color: transparent;
}

/* 页面容器 */
.container {
	margin-left: auto;
	margin-right: auto;
	width: 800px;
}

/* 页面头部 */
.head {
	width: 100%;
	height: 60px;
	border-bottom-width: 3px;
	border-bottom-style: solid;
	border-bottom-color: #115e8a;
	background-color: rgb(230, 240, 247);
}

/* 页面主体 */
.main {
	width: 100%;
}

/* 页面标志 */
.logo {
	width: 100%;
	height: 40px;
	text-align: center;
}

/* 返回主页菜单 */
.menu {
	width: 100%;
	height: 20px;
	text-align:right;
}

/* 注册及修改步骤 */
.steplogo {
	margin-top: 2px;
	margin-bottom: 2px;
	width: 100%;
	height: 20px;
	background-color: rgb(247, 247, 247);
	text-align: left;
	vertical-align: middle;
}

/* 导航信息颜色 */
.stepping {
	color: #FF7400;
	font-weight: bold;
}

/* 主体内容 */
.center {
	margin-bottom: 10px;
	width: 100%;
}

/* 人员信息table */
.table_center {
	margin-left: auto;
	margin-right: auto;
	border-collapse: collapse;
	width: 340px;
}

.table_btn {
	width: 100%;
}

/* 找回密码 */
.retrievepassword {
	margin-left: auto;
	margin-right: auto;
	width: 340px;
	color: #FF0000;
	text-align: center;
}

/* 字段名 */
.td_right {
	width: 100px;
	text-align: right;
	padding-right: 5px;
}

/* 字段值 */
.td_value {
	height: 34px;
	padding-left: 5px;
}

/* 输入框必填 */
.text_red {
	color: #FF0000;
}

/* 找密码 */
.retrievepassword {
	margin-left: auto;
	margin-right: auto;
	margin-top: 20pt;
	width: 600px;
}

/* 激活信息 */
.infor {
	margin: 5pt;
	margin-top: 20pt;
	font-family: 宋体, Arial;
	text-align: center;
	font-size: 12pt;
}

/* 教育背景单元格 */

.td2 {
	width: 150px;
	text-align: left;
	height: 34px;
}

.td3 {
	width: 100px;
	text-align: left;
	height: 34px;
}

.td4 {
	width: 50px;
	text-align: left;
	height: 34px;
}

/* 教育背景按钮区 */
.th_button {
	width:50%;
}

.th_left {
	text-align: left;
}

.th_center {
	text-align: center;
}

.th_right {
	text-align: right;
}

/* 按钮 */
.btn {
	background-color: #F5FBFF;
    border: 1px solid #7AC4EA;
    color: #333333;
    font-weight: normal;
	cursor: pointer;
}

/* 使输入框不上下移动 */
.input0 {
	height: 19px;
	margin: auto;
}

/* 字段输入框 */
.input2 {
    background-color: #F5FBFF;
    border: 1px solid #7AC4EA;
    color: #333333;
	height: 17px;
    font-weight: normal;
	width: 90%;
}

/* 文件上传输入框 */
.input1 {
    background-color: #F5FBFF;
    border: 1px solid #7AC4EA;
    color: #333333;
	height: 19px;
    font-weight: normal;
	width: 90%;
}

/* select下拉框 */
.select {
    background-color: #F5FBFF;
    border: 1px solid #7AC4EA;
    color: #333333;
	height: 19px;
    font-weight: normal;
}