<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
		"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="hust.bean">
	<class name="hust.bean.Country" table="t_country">
		<id name="id" column="c_id">
			<generator class="increment"></generator>
		</id>
		
		<property name="name" column="c_name"></property>
		
		<set name="province" cascade="all">
			<key>
				<column name="c_country_id" length="2" />  <!-- 指定外键列名 -->
			</key>
			<one-to-many class="hust.bean.Province" />
		</set>
	</class>
</hibernate-mapping>