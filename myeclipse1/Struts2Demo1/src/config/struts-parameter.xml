<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC 
      "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" 
      "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>	 
	<!-- 当struts的配置文件修改后,系统是否自动重新加载该文件,默认值为false(生产环境下使用),开发阶段最好打开 -->
    <constant name="struts.configuration.xml.reload" value="true"/>
	 
	<package name="Parameter" namespace="/test1" extends="json-default">
		<action name="URLparam" class="edu.hust.action.parameter.URLParameter" method="execute">
			<result name="success">/WEB-INF/page/message.jsp</result>
		</action>
		
		<action name="formparam" class="edu.hust.action.parameter.FormParameter" method="execute">
			<result name="success">/WEB-INF/page/formmessage.jsp</result>
		</action>
	</package>
	
</struts>