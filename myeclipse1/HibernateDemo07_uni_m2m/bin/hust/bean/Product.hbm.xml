<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
		"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="hust.bean">
	<class name="hust.bean.Product" table="t_product">
		<id name="id" column="c_id">
			<generator class="increment"></generator>
		</id>
		
		<property name="name" column="c_name" />
		
		<set name="orders" table="t_product_order" cascade="all">   <!-- 多对多的时候，要指定中间表表名 -->
			<key>
				<column name="c_product_id" length="2" />   <!-- 中间表指向本类的外键列名 -->
			</key>
			<many-to-many class="hust.bean.Order" column="c_order_id" />
		</set>
	</class>
</hibernate-mapping>