<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="record" extends="default" namespace="/record">
		<action name="toList" class="recordAction" method="toList">
			<result>/jsp/recruitment/record/listRecord.jsp</result>
		</action>
		<action name="list" class="recordAction" method="list">
			<result type="json">
				<param name="root">jsonMap</param>
			</result>
		</action>
		<action name="toAdd" class="recordAction" method="toAdd">
			<result>/jsp/recruitment/record/addRecord.jsp</result>
		</action>
		<action name="add" class="recordAction" method="add">
			<result>/jsp/recruitment/record/addRecord.jsp</result>
		</action>
		<action name="view" class="recordAction" method="view">
			<result>/jsp/recruitment/record/view.jsp</result>
		</action>
	</package>
</struts>
