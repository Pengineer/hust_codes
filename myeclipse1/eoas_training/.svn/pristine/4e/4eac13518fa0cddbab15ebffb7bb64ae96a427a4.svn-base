<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="role" extends="default" namespace="/role">
		<!-- 进入权限列表 -->
		<action name="toList" class="roleAction" method="toList">
			 <result>/jsp/oa/roleright/listRole.jsp</result>
		</action>
		<!-- 权限列表 -->
		<action name="list" class = "roleAction" method="list">
			<result type="json">
				<param name="root">jsonMap</param>  
			</result>
		</action>
		
		<!-- 添加权限 -->
		<action name="toAdd" class="roleAction" method="toAdd">
			<result>/jsp/oa/roleright/addRole.jsp</result>
		</action>
		
		<action name="add" class="roleAction" method="add">
			<result type="redirectAction">
				<param name="actionName">view</param>
				<param name="roleId">${roleId}</param>
			</result>
			<result name="input">/jsp/oa/roleright/addRole.jsp</result>
		</action>
		
		<!-- 删除权限 -->
		<action name="delete" class="roleAction" method="delete">
			<result type="json">
	    		<param name="root">jsonMap</param>
	    	</result>
		</action>

		
		<!-- 查看权限 -->
		<action name="view" class="roleAction" method="view">
			<result>/jsp/oa/roleright/viewRole.jsp</result>
		</action>
		
		<!-- 修改权限-->
		<action name="toModify" class="roleAction" method="toModify">
			<result>/jsp/oa/roleright/modifyRole.jsp</result>
		</action>
		
		<action name="modify" class="roleAction" method="modify">
			<result type="redirectAction">
				<param name="actionName">view</param>
				<param name="roleId">${role.id}</param>
			</result>
			<result name="input">/jsp/oa/roleright/modifyRole.jsp</result>
		</action>
		
				<!-- 查看权限 -->
		<action name="viewAccountRole" class="roleAction" method="viewAccountRole">
			<result>/jsp/oa/roleright/accountRole.jsp</result>
		</action>
		
		<action name="accountRole" class="roleAction" method="accountRole">
			<result>/jsp/oa/account/list.jsp</result>
		</action>
		
		<action name="createRightTree" class="roleAction" method="createRightTree" />
	</package>
</struts>