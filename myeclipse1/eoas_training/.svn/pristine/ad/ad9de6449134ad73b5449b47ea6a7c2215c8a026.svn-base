*{
	padding: 0;
	margin: 0;
	font: 12px/1 Tahoma,Helvetica,Arial,"宋体",sans-serif;
}

html,body {
	width: 100%;
	height: 100%;
}

body {
	background: url("../../image/loginbg.jpg") no-repeat scroll center top #F0E6DB;
}

a {
	text-decoration: none;
}

/*设置HTML顶部招聘导航*/
.nav {
	width: 100%;
	min-width: 1024px;
	height: 60px;
	position: fixed;
	top: 0;
	overflow: hidden;
	background-image: url("../../image/navbg.jpg");
	filter:alpha(opacity=70);   
	-moz-opacity: 0.7;   
	-khtml-opacity: 0.7;   
	opacity: 0.7; 
	z-index: 1000;
}

.nav ul {
	margin-left: 10%;
	text-align: center;
}

.nav ul li {
	display: inline;
	list-style-type:none;
	float: left;
}

.nav ul li a {
	display: block;
	width: 170px;
	height: 60px;
	border: 0 1px;
	color: black;
	font: 18px/1 Tahoma,Helvetica,Arial,"宋体",sans-serif;
	text-decoration: none;
	text-align: center;
	line-height: 60px;
	border-left: 1px solid #EEEFF3;
	border-right: 1px solid #EEEFF3;
}

.social-link a:hover {
	color: white;
	background-color: #029FD4;#8DC919
}

.campus-link a:hover {
	color: white;
	background-color: #8DC919;#F88F1C
}

.intern-link a:hover {
	color: white;
	background-color: #F88F1C;
}

.ent-logo a:hover {
	color: white;
	background-color: #900093;
}

/*设置HTML底部页脚*/
.footer {
	background: url("../../image/footerbg.jpg");
	width: 100%;
	height: 30px;
	position: fixed;
	bottom: 0px;
	line-height: 30px;
	text-align: center;
	color: white;
	filter:alpha(opacity=40);   
	-moz-opacity: 0.4;   
	-khtml-opacity: 0.4;   
	opacity: 0.4;
}

.footer a {
	color: white;
}

.footer a:hover{
	text-decoration: underline;
}

/*设置中间注册/登录/找回密码标签*/
.entry-form {
	position: relative;
	top: 150px;
	left: 250px;
	width: 990px;
	height: 560px;
	background-color: #FFFFFF;
	color: black;
	overflow: no scroll;
	border-radius: 8px;
}

.entry-form ul {
	list-style: none outside none;
	height: 60px;
	width: 100%;
	border-bottom: 1px solid  #E5E5E5;
	background: none repeat scroll 0 0 #F7F7F7;
	border-radius: 8px 8px 0 0;
}

.entry-form ul li {
	border-right: 1px solid #E5E5E5;
	display: inline;
	list-style-type:none;
	float: left;
}

.default-form {
	background-color: #FFF;
	border-bottom: 1px solid #FFF;
	border-radius: 8px 0 0 0;
}

.entry-form ul li a {
	display: block;
	width: 100px;
	height: 60px;
	color: black;
	font: 18px/1 Tahoma,Helvetica,Arial,"宋体",sans-serif;
	text-decoration: none;
	text-align: center;
	line-height: 60px;
}

.tab-div {
	height: 500px;
	width: 100%;
	display: none;
	position: relative;
	background: url("../../image/join-us.jpg") no-repeat scroll right 10px rgba(0, 0, 0, 0);
	border-top: 1px solid #FFF;
}

#login-div {
	display: block;
}

/*登录Tab*/
.tab-div div {
	height: 35px;	
	line-height: 35px;
	margin-top: 15px;
}

.label1 {
	display: inline-block;
	font: 14px Tahoma,Helvetica,Arial,"宋体",sans-serif;
	width: 160px;
	text-align: right;
	color: #606060;
}

.label2 {
	display: inline-block;
	font: 12px Tahoma,Helvetica,Arial,"宋体",sans-serif;
	width: 80px;
	margin-left: 160px;
	margin-right: 20px;
	text-align: right;
	color: #606060;
}

.label3 {
	display: inline-block;
	width: 80px;
	margin-right: 20px;
	color: #606060;
}

.red-alarm {
	color: red;
}

.login {
	margin-left: 40px;
	margin-top: 25px;
}

 .input1 {
 	width: 270px;
 	height: 30px;
 	border: 1px solid #7594A6;
 	font: 12px Tahoma,Helvetica,Arial,"宋体",sans-serif;
 	line-height: 30px;
 }

 .input1:focus{
 	border: 1px solid #FF840F;
 }

.input2 {
	width: 80px;
 	height: 30px;
 	border: 1px solid #7594A6;
 	font: 12px Tahoma,Helvetica,Arial,"宋体",sans-serif;
 	line-height: 30px;
}

 .input2:focus{
 	border: 1px solid #FF840F;
 }

 .button1 {
 	width: 270px;
