$(document).ready(function(){	
	/*
	 * 添加专家顾问前台校验
	*/
	
	
	/**
	 * 校验
	 */
	$("#expert_add").validationEngine({
		scroll: true,
		isOverflown:true,
		validateNonVisibleFields: true,
		promptPosition: 'centerRight',
		addPromptClass: 'formError-noArrow formError-text formError-custom',
	})
});