		<!--部门 -->
		<action name="departmentAction_*" class="departmentAction" method="{1}">
			<result name="list">/jsp/oa/systemDepartment/departmentlist.jsp</result>
			<result name="saveUI">/jsp/oa/systemDepartment/departmentsaveUI.jsp</result>
