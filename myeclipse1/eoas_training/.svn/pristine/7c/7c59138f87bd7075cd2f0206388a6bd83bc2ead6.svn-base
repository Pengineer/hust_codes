<struts>
	<package name="oa" extends="default" namespace="/oa">

		<!-- 配置全局的Result -->
		<global-results>
			<result name="loginUI">/jsp/oa/home/loginUI.jsp</result>
			<result name="noPrivilegeError">noPrivilegeError.jsp</result>
		</global-results>

		<!-- OA登录 -->
		<action name="loginUI" class="loginAction" method="loginUI">
			<result name="loginUI">/jsp/oa/home/loginUI.jsp</result>
		</action>
		<action name="oaLogin" class="loginAction" method="oaLogin">
			<result name="success">/jsp/oa/home/index.jsp</result>
		</action>


		<!-- 用户 -->
		<action name="personAction_toList" class="personAction" method="toList">
			<result name="success">/jsp/oa/systemPerson/personList.jsp</result>
		</action>
		<action name="personAction_list" class="personAction" method="list">
			<result type="json">
				<param name="root">jsonMap</param>
			</result>
		</action>
		<action name="personAction_addUI" class="personAction" method="addUI">
			<result name="addUI">/jsp/oa/systemPerson/addUI.jsp</result>
		</action>
		<action name="personAction_add" class="personAction" method="add">
			<result name="toList" type="redirectAction">personAction_list.action</result>
		</action>
		<action name="personAction_modifyUI" class="personAction" method="modifyUI">
			<result name="editUI">/jsp/oa/systemPerson/editUI.jsp</result>
		</action>
		<action name="personAction_modify" class="personAction" method="modify">
			<result name="toList" type="redirectAction">personAction_list.action</result>
		</action>
		<action name="personAction_delete" class="personAction" method="delete">
			<result name="toList" type="redirectAction">personAction_list.action</result>
		</action>

