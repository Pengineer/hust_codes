<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name = "expert" extends = "default" namespace = "/expert">
		<action name="toList" class="expertAction" method="toList">
			<result>/jsp/oa/expert/list.jsp</result>
		</action>
		
		<action name="list" class="expertAction" method="list">
			<result type="json">
				<param name="root">jsonMap</param>
			</result>
		</action>
	
		<action name = "toAdd" class = "expertAction" method = "toAdd">
			 <result>/jsp/oa/expert/add.jsp</result>
		</action>

		<action name = "add" class = "expertAction" method = "add">
			 <result>/jsp/oa/expert/view.jsp</result>
		</action>

		<action name = "toModify" class = "expertAction" method = "toModify">
			 <result>/jsp/oa/expert/modify.jsp</result>
		</action>
		
		<action name = "modify" class = "expertAction" method = "modify">
			<result type="redirectAction">
				<param name="actionName">view</param>
				<param name="expertId">${expert.id}</param>
			</result>
		</action>
		
		<action name = "delete" class = "expertAction" method = "delete">
			<result type="json">
	    		<param name="root">jsonMap</param>
	    	</result>
		</action>
		
		<action name = "view" class = "expertAction" method = "view">
			 <result>/jsp/oa/expert/view.jsp</result>
		</action>
		
<!-- 		<action name = "view" class = "expertAction" method = "view">
			 <result>/jsp/oa/expert/view.jsp</result>
		</action> -->
		
		
		<action name="toSelectDiscipline" class="expertAction" method="toSelectDiscipline">
			<result>/jsp/oa/expert/selectRelyDisciplines.jsp</result>
		</action>
		
		<action name="createDisciplineTree" class="expertAction" method="createDisciplineTree">
		</action>
	</package>
</struts>