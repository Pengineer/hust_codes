<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" 
						"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="person" extends="default" namespace="/person">
		<action name="toList" class="personAction" method="toList">
			<result>/jsp/oa/person/list.jsp</result>
		</action>
	
		<action name="list" class="personAction" method="list">
			<result type="json"><param name="root">jsonMap</param></result>
		</action>
		
		<action name="toAdd" class="personAction" method="toAdd">
			<result>/jsp/oa/person/add.jsp</result>
		</action>	

		<action name="add" class="personAction" method="add">
			<result>/jsp/oa/person/view.jsp</result>
		</action>
		
		<action name="toModify" class="personAction" method="toModify">
			<result>/jsp/oa/person/modify.jsp</result>
		</action>

		<action name="modify" class="personAction" method="modify">
			<result>/jsp/oa/person/view.jsp</result>
		</action>
		
		<action name="view" class="personAction" method="view">
			<result>/jsp/oa/person/view.jsp</result>
		</action>

	</package>
</struts>