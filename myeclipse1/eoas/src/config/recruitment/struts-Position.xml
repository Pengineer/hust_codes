<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="position" extends="default" namespace="/position">
	    <!-- 获取页面显示的相关信息 -->
        <action name="listMyApplyPosition" class="positionAction" method="listMyApplyPosition">
	        <result>/jsp/recruitment/position/listMyApplyPosition.jsp</result>
	    </action>
	    <action name="listMyFavoritePosition" class="positionAction" method="listMyFavoritePosition">
	        <result>/jsp/recruitment/position/listMyFavoritePosition.jsp</result>
	    </action>
		<action name="listPosition" class="positionAction" method="listPosition">
	        <result>/jsp/recruitment/position/listPosition.jsp</result>
	    </action>
	    <action name="toAddPosition" class="positionAction" method="toAddPosition">
	        <result>/jsp/recruitment/position/addPosition.jsp</result>
	    </action>
	</package>
</struts>
