body {
    background-image: url("../../image/globalbg.jpg");
}

.nav {
	width: 880px;
	position: absolute;
	top: 40%;
	background-image: url("../../image/navbg.jpg");
	filter:alpha(opacity=70);   
	-moz-opacity: 0.7;   
	-khtml-opacity: 0.7;   
	opacity: 0.7; 
	border-radius: 4px;
}

.nav ul {
	text-align: center;
}

.nav ul li {
	display: inline;
	list-style-type:none;
	float: left;
}

.nav ul li a {
	display: block;
	width: 170px;
	height: 60px;
	border: 0 1px;
	color: black;
	font: 20px/1 Tahoma,Helvetica,Arial,"宋体",sans-serif;
	text-decoration: none;
	text-align: center;
	line-height: 60px;
	border-left: 1px solid #EEEFF3;
	border-right: 1px solid #EEEFF3;
}

.ent-logo {
	display: block;
	width: 170px;
	height: 60px;
	border: 0 1px;
	color: black;
	font: 40px/1 Tahoma,Helvetica,Arial,"隶书",sans-serif;
	font-style:italic;
	text-decoration: none;
	text-align: center;
	line-height: 60px;
	border-right: 1px solid #EEEFF3;
}

.social-link a:hover {
	color: white;
	background-color: #029FD4;#8DC919
}

.campus-link a:hover {
	color: white;
	background-color: #8DC919;#F88F1C
}

.intern-link a:hover {
	color: white;
	background-color: #F88F1C;
}

.entry {
	float: left;
	padding: 10px 0px 0px 20px;
	border-left: 1px solid #EEEFF3;
}

.footer {
	background: url("../../image/footerbg.jpg");
	width: 100%;
	height: 30px;
	position: fixed;
	bottom: 0px;
	line-height: 30px;
	text-align: center;
	color: white;
	filter:alpha(opacity=40);   
	-moz-opacity: 0.4;   
	-khtml-opacity: 0.4;   
	opacity: 0.4; 
}

.footer a {
	color: white;
}

.footer a:hover{
	text-decoration: underline;
}