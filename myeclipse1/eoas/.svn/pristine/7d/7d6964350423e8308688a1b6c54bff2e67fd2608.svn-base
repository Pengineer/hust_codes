html, body {
    height: 100%;
}

body {
	background: url("../../image/loginbg.jpg") no-repeat scroll center top #F0E6DB;
}

/*设置HTML顶部招聘导航*/
.nav-custom {
	width: 100%;
	min-width: 1024px;
	height: 60px;
	position: fixed;
	top: 0;
	overflow: hidden;
	background-image: url("../../image/navbg.jpg");
	filter:alpha(opacity=70);   
	-moz-opacity: 0.7;   
	-khtml-opacity: 0.7;   
	opacity: 0.7; 
	z-index: 1000;
}

.nav-custom ul {
	margin-left: 10%;
	text-align: center;
}

.nav-custom ul li {
	display: inline;
	list-style-type:none;
	float: left;
}

.nav-custom ul li a {
	display: block;
	width: 170px;
	height: 60px;
	border: 0 1px;
	color: black;
	font: 18px/1 Tahoma,Helvetica,Arial,"宋体",sans-serif;
	text-decoration: none;
	text-align: center;
	line-height: 60px;
	border-left: 1px solid #EEEFF3;
	border-right: 1px solid #EEEFF3;
}

.social-link a:hover {
	color: white;
	background-color: #029FD4;#8DC919
}

.campus-link a:hover {
	color: white;
	background-color: #8DC919;#F88F1C
}

.intern-link a:hover {
	color: white;
	background-color: #F88F1C;
}

.ent-logo a:hover {
	color: white;
	background-color: #900093;
}

.entry {
	float: left;
	padding: 10px 0px 0px 20px;
	border-left: 1px solid #EEEFF3;
}

#wrap {
    min-height: 100%;
    height: auto;
}

.menu {
	position: absolute;
	top: 200px;
	left: 200px;
	width: 170px;
	overflow: no scroll;
	background-color: #FAEBCC;
	border-radius: 8px;
	padding: 10px;
	text-align: center;
}

.menu ul li {
	height: 40px;
}

.menu ul li:hover {
	background-color: #BCE8F1;
	border-radius: 4px;
}

.menu ul li ul {
	display: none;
	position: relative;
	left: 150px;
	top: -40px;
	background-color: #BCE8F1;
	border-radius: 4px;
	z-index: 100;
}

.content {
	position: relative;
	top: 200px;
	left: 400px;
	width: 900px;
	height: auto;
	overflow: no scroll;
	background-color: #FAEBCC;
	border-radius: 8px;
	padding: 10px;
}

.row {
	margin: 10px;
}

.input {
	 border-radius: 4px;
	 color: #555555;
	 border: 1px solid #CCCCCC;
	 background-color: #FFFFFF;
	 height: 34px;
}

.center {
	text-align: center;
}

.form-signin {
    margin: 0 auto;
    max-width: 330px;
    padding: 15px;
}

.footer {
	background: url("../../image/footerbg.jpg");
	width: 100%;
	height: 30px;
	position: fixed;
	bottom: 0px;
	line-height: 30px;
	text-align: center;
	color: white;
	filter:alpha(opacity=40);   
	-moz-opacity: 0.4;   
	-khtml-opacity: 0.4;   
	opacity: 0.4; 
}

.footer a {
	color: white;
}

.footer a:hover{
	text-decoration: underline;
}