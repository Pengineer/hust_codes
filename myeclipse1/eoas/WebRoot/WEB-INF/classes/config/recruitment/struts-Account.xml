<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="account" extends="default" namespace="/account">
	    <!-- 获取页面显示的相关信息 -->
        <action name="toIndex" class="accountAction" method="toIndex">
	        <result>/jsp/recruitment/index.jsp</result>
	    </action>
		<action name="toRegister" class="accountAction" method="toRegister">
	        <result>/jsp/recruitment/account/registerStep.jsp</result>
	    </action>
	    <action name="register" class="accountAction" method="register">
	    	<result name="success">/jsp/recruitment/selfspace/main.jsp</result>
	    	<result name="input">/jsp/recruitment/account/login.jsp</result>
	    </action>
	    <action name="login" class="accountAction" method="login">
	    	<result name="success">/jsp/recruitment/selfspace/main.jsp</result>
	    	<result name="input">/jsp/recruitment/index.jsp</result>
	    </action>
	    <action name="toModifyPassword" class="accountAction" method="toModifyPassword">
	    	<result>/jsp/recruitment/account/modifyPassword.jsp</result>
	    </action> 
	    <!-- 生成验证码 -->
	    <action name="rand" class="accountAction" method="rand">
	        <result type="stream"> 
                <param name="contentType">image/jpeg</param>
                <param name="inputName">inputStream</param>      
            </result>   
	    </action>
	    

	</package>
</struts>