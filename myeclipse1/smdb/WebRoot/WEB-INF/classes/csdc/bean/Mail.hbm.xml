<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="csdc.bean.Mail" table="T_MAIL" >
        <id name="id" type="java.lang.String">
            <column name="C_ID" length="40" />
            <generator class="uuid.hex" />
        </id>
        <many-to-one name="account" class="csdc.bean.Account" fetch="select">
            <column name="C_ACCOUNT_ID" length="40" />
        </many-to-one>
        <property name="accountBelong" type="java.lang.String">
            <column name="C_ACCOUNT_BELONG" length="200" />
        </property>
        <property name="sendTo" type="java.lang.String">
            <column name="C_SEND_TO" />
        </property>
        <property name="subject" type="java.lang.String">
            <column name="C_SUBJECT" length="200" />
        </property>
        <property name="log" type="java.lang.String">
            <column name="C_LOG" length="4000" />
        </property>
        <property name="body" type="java.lang.String">
            <column name="C_BODY" />
        </property>
        <property name="isHtml" type="java.lang.Integer">
            <column name="C_IS_HTML" precision="1" scale="0" not-null="true" />
        </property>
        <property name="createDate" type="java.sql.Timestamp">
            <column name="C_CREATE_DATE" length="7" not-null="true" />
        </property>
        <property name="finishDate" type="java.sql.Timestamp">
            <column name="C_FINISH_DATE" length="7" />
        </property>
        <property name="sendTimes" type="java.lang.Integer">
            <column name="C_SEND_TIMES" precision="10" scale="0" />
        </property>
        <property name="cc" type="java.lang.String">
            <column name="C_CC" />
        </property>
        <property name="from" type="java.lang.String">
			<column name="C_FROM" />
		</property>
		<property name="bcc" type="java.lang.String">
			<column name="C_BCC" />
		</property>
		<property name="replyTo" type="java.lang.String">
			<column name="C_REPLY_TO" />
		</property>
        <property name="status" type="java.lang.Integer">
        	<column name="C_STATUS" precision="1" scale="0" not-null="true" />
        </property>
        <property name="attachment" type="java.lang.String">
            <column name="C_ATTACHMENT" length="1000" />
        </property>
        <property name="attachmentName" type="java.lang.String">
            <column name="C_ATTACHMENT_NAME" length="2000" />
        </property>
        <property name="dfs" type="java.lang.String">
            <column name="C_DFS" length="200" />
        </property>
    </class>
</hibernate-mapping>