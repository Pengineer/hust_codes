<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="csdc.bean.SystemConfig" table="T_SYSTEM_CONFIG" >
        <id name="id" type="java.lang.String">
            <column name="C_ID" length="40" />
            <generator class="uuid.hex" />
        </id>
        <property name="key" type="java.lang.String">
            <column name="C_KEY" length="40" not-null="true" unique="true" />
        </property>
        <property name="value" type="java.lang.String">
            <column name="C_VALUE" />
        </property>
        <property name="description" type="java.lang.String">
            <column name="C_DESCRIPTION" length="800" />
        </property>
        <property name="group" type="java.lang.String">
        	<column name="C_GROUP" length="200"  not-null="true" />
        </property>
        <property name="isReadonly" type="java.lang.Integer">
        	<column name="C_IS_READONLY" precision="1" scale="0" not-null="true" />
        </property>
    </class>   
</hibernate-mapping>