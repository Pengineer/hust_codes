<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="mobileSetting" extends="main" namespace="/mobile/setting">

		<action name="resetPassword" class="mobileSettingAction" method="resetPassword">
			<result type="json"><param name="root">jsonMap</param></result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>
		
		<action name="checkUpdate" class="mobileSettingAction" method="checkUpdate">
			<result type="json"><param name="root">jsonMap</param></result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>
		
		<action name="messagePush" class="mobileSettingAction" method="messagePush">
			<result type="json"><param name="root">jsonMap</param></result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>

		<action name="pushMessage" class="mobileSettingAction" method="pushMessage">
			<result type="json"><param name="root">jsonMap</param></result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>
				
		<action name="getHelp" class="mobileSettingAction" method="getHelp">
			<result type="json"><param name="root">jsonMap</param></result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>
		
		<action name="getAbout" class="mobileSettingAction" method="getAbout">
			<result type="json"><param name="root">jsonMap</param></result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>
		
		<action name="toDownloadApp" class="mobileSettingAction" method="toDownloadApp">
			<result>/mobile/download/index.jsp</result>
		</action>
		
		<action name="downloadApp" class="mobileSettingAction" method="downloadApp">
			<result type="stream">
		 	    <param name="inputName">appStream</param>
		 	    <param name="contentType">application/vnd.android.package-archive</param>
		 	    <param name="bufferSize">10240*1024</param> 
		 	    <param name="contentDisposition">attachment;fileName="${appName}"</param>  
	 	  	</result>
	 	</action>		
	</package>
	
</struts>
