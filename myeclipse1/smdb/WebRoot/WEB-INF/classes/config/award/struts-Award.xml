<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="award" extends="main" namespace="/award">
	
		<!-- 进入我的奖励列表页面 -->
		<action name="toSearchMyAward" class="awardAction" method="toSearchMyAward">
			<result>/award/listMyAward.jsp</result>
		</action>
		<!-- 我的奖励列表查询 -->
		<action name="searchMyAward" class="awardAction" method="searchMyAward">
			<result type="json"><param name="root">jsonMap</param></result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>
		<!-- 进入查看我的奖励页面 -->
		<action name="toViewMyAward" class="awardAction" method="toViewMyAward">
	        <result>${returnView}</result>
	    </action>
	    <!-- 查看我的奖励 -->
	    <action name="viewMyAward" class="awardAction" method="viewMyAward">
	    	<result type="json"><param name="root">jsonMap</param></result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
	    </action>
	</package>
</struts>