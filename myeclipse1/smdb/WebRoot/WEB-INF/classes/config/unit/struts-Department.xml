<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

	<package name="department" extends="main" namespace="/unit/department">
	
		<action name="toAdd" class="departmentAction" method="toAdd">
			<result>/unit/agency/department/add.jsp</result>
		</action>
		
		<action name="add" class="departmentAction" method="add">
			<result type="redirectAction">
				<param name="actionName">toView</param>
				<param name="entityId">${entityId}</param>
			</result>
			<result name="input">/unit/agency/department/add.jsp</result>
		</action>
		
		<action name="toView" class="departmentAction" method="toView">
			<result>/unit/agency/department/view.jsp</result>
		</action>
		
		<action name="view" class="departmentAction" method="view">
			<result type="json"><param name="root">jsonMap</param></result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>
		
		<action name="toModify" class="departmentAction" method="toModify">
			<result>/unit/agency/department/modify.jsp</result>
		</action>
		
		<action name="modify" class="departmentAction" method="modify">
			<result type="redirectAction">
				<param name="actionName">toView</param>
				<param name="entityId">${entityId}</param>
				<param name="viewFlag">${viewFlag}</param>
				<param name="update">1</param>
			</result>
			<result name="input">/unit/agency/department/modify.jsp</result>
		</action>
		
		<action name="delete" class="departmentAction" method="delete">
			<result type="json"><param name="root">jsonMap</param></result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>
		
		<!--<action name="merge" class="departmentAction" method="merge">
			<result type="chain">list</result>
		</action>

		--><action name="toList" class="departmentAction" method="toList">
			<result>/unit/agency/department/list.jsp</result>
		</action>
		
		<action name="list" class="departmentAction" method="list">
			<result type="json"><param name="root">jsonMap</param></result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>
		
		<action name="simpleSearch" class="departmentAction" method="simpleSearch">
			<result type="chain">list</result>
		</action>
		
		<action name="changePageSize" class="departmentAction" method="changePageSize">
			<result type="chain">list</result>
		</action>
		
		<action name="sort" class="departmentAction" method="sort">
			<result type="chain">list</result>
		</action>
		
		<action name="prev" class="departmentAction" method="prev">
			<result type="redirectAction">
				<param name="actionName">view</param>
				<param name="entityId">${entityId}</param>
			</result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>
		
		<action name="next" class="departmentAction" method="next">
			<result type="redirectAction">
				<param name="actionName">view</param>
				<param name="entityId">${entityId}</param>
			</result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>

		<action name="toPage" class="departmentAction" method="toPage">
			<result type="chain">list</result>
		</action>
		
<!-- 		<action name="toAdvSearch" class="departmentAction" method="toAdvSearch"> -->
<!-- 			<result>/unit/agency/department/advSearch.jsp</result> -->
<!-- 		</action> -->
		
		<action name="advSearch" class="departmentAction" method="advSearch">
			<result type="chain">list</result>
		</action>
		
		<action name="toMerge" class="departmentAction" method="toMerge">
			<result>/unit/agency/popMergeDepartment.jsp</result>
			<result name="input">/unit/agency/popMergeDepartment.jsp</result>
		</action>

		<action name="merge" class="departmentAction" method="merge">
			<result type="json"><param name="root">jsonMap</param></result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>
	</package>
</struts>