<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="statisticAwdCustom" extends="main" namespace="/statistic/custom/award">
		<interceptors>
			<interceptor name="statisticLogInterceptor" class="statisticLogInterceptor" />
			<interceptor-stack name="myInterceptorStack">
				<interceptor-ref name="statisticLogInterceptor"/>
				<interceptor-ref name="defaultStack"/>
			</interceptor-stack>
		</interceptors>
		
		<default-interceptor-ref name="myInterceptorStack"/>
		
		<action name="toCustomStatistic" class="awardStatisticAction" method="toCustomStatistic">
	    	<result>/statistic/custom/award.jsp</result>
	    </action>
		
		<action name="customStatistic" class="awardStatisticAction" method="customStatistic">
	    	<result type="redirectAction">
				<param name="actionName">toView</param>
				<param name="encryptedMdxQueryString">${encryptedMdxQueryString}</param>
				<param name="chartConfig">${chartConfig}</param>
			</result>
	    </action>
		<action name="toView" class="awardStatisticAction" method="toView">
	    	<result>/statistic/custom/view.jsp</result>
	    	<result name="error">/statistic/custom/error.jsp</result>
	    </action>                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                     
	    
		<action name="toCommon" class="awardStatisticAction" method="toCommon">
	    	<result type="json"><param name="root">jsonMap</param></result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
	    </action>
	    
	    <action name="titleCreate" class="awardStatisticAction" method="titleCreate">
	    	<result>/statistic/custom/titleCreate.jsp</result>
	    </action>
	</package>
</struts>