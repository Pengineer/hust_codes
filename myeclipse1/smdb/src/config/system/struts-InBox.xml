<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<package name="inBox" extends="main" namespace="/inBox">
	
		<action name="toList" class="inBoxAction" method="toList">
			<result>/system/inBox/list.jsp</result>
		</action>
		
		<action name="list" class="inBoxAction" method="list">
			<result type="json"><param name="root">jsonMap</param></result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>
		
		<action name="simpleSearch" class="inBoxAction" method="simpleSearch">
			<result type="chain">list</result>
		</action>
		
		<action name="checkAccountId" class="inBoxAction" method="checkAccountId">
			<result type="json"><param name="root">jsonMap</param></result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>


		<action name="toAdd" class="inBoxAction" method="toAdd">
			<result>/system/inBox/add.jsp</result>
<!-- 			<result name="input" type="json"><param name="root">jsonMap</param></result> -->
		</action>
		
		<action name="add" class="inBoxAction" method="add">
			<result type="redirectAction">
				<param name="actionName">toList</param>
			</result>
			<result name="friend" type="json"><param name="root">jsonMap</param></result>
			<result name="input">/system/inBox/add.jsp</result>
			
		</action>
		
		<action name="remind" class="inBoxAction" method="remind">
			<result type="json"><param name="root">jsonMap</param></result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>
		
		<action name="toView" class="inBoxAction" method="toView">
			<result>/system/inBox/view.jsp</result>
		</action>
		
		<action name="view" class="inBoxAction" method="view">
			<result type="json"><param name="root">jsonMap</param></result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>
		
		<action name="prev" class="inBoxAction" method="prev">
			<result type="redirectAction">
				<param name="actionName">view</param>
				<param name="entityId">${entityId}</param>
			</result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>

		<action name="next" class="inBoxAction" method="next">
			<result type="redirectAction">
				<param name="actionName">view</param>
				<param name="entityId">${entityId}</param>
			</result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>

		<action name="simpleSearch" class="inBoxAction" method="simpleSearch">
			<result type="chain">list</result>
		</action>
		
		<action name="delete" class="inBoxAction" method="delete">
			<result type="json"><param name="root">jsonMap</param></result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>

		<action name="sort" class="inBoxAction" method="sort">
			<result type="chain">list</result>
		</action>
		
		<action name="changePageSize" class="inBoxAction" method="changePageSize">
			<result type="chain">list</result>
		</action>
		
		<action name="toPage" class="inBoxAction" method="toPage">
			<result type="chain">list</result>
		</action>
	</package>


</struts>