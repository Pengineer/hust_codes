<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="Patent" extends="main" namespace="/product/patent">
	
		<action name="toList" class="PatentAction" method="toList">
			<result>/product/patent/list.jsp</result>
		</action>

		<action name="list" class="PatentAction" method="list">
			<result type="json"><param name="root">jsonMap</param></result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>

		<action name="simpleSearch" class="PatentAction" method="simpleSearch">
			<result type="chain">list</result>
		</action>
		
		<action name="advSearch" class="PatentAction" method="advSearch">
			<result type="chain">list</result>
		</action>
		
		<action name="sort" class="PatentAction" method="sort">
			<result type="chain">list</result>
		</action>

		<action name="changePageSize" class="PatentAction" method="changePageSize">
			<result type="chain">list</result>
		</action>

		<action name="toPage" class="PatentAction" method="toPage">
			<result type="chain">list</result>
		</action>
		
		<action name="toAdd" class="PatentAction" method="toAdd">
			<result>/product/patent/add.jsp</result>
		</action>
		
    	<action name="add" class="PatentAction" method="add"> 
       		<param name="savePath">/upload/product/patent</param>
       		<result type="redirectAction">
				<param name="entityId">${entityId}</param>
				<param name="productflag">${productflag}</param>
				<param name="actionName">toView</param>	
	        </result>
	        <result name="finish" type="json"><param name="root">jsonMap</param></result>
<!--       		<result name="finish">/product/extIf/popAdd.jsp</result>-->
        	<result name="input">${inputView}</result>
    	</action>
    		  	 
	 	<action name="toModify" class="PatentAction" method="toModify">
	    	<result>/product/patent/modify.jsp</result>
	    	<result name="finish">/product/extIf/popModifyPatent.jsp</result>
	   	</action>
	   	
	 	<action name="modify" class="PatentAction" method="modify">
 	    	<param name="savePath">/upload/product/patent</param>
 	    	<result type="redirectAction">
		 		<param name="entityId">${entityId}</param>
				<param name="productflag">${productflag}</param>
				<param name="update">1</param>
			 	<param name="actionName">toView</param>	
	      	</result>
	      	<result name="finish" type="json"><param name="root">jsonMap</param></result>
      		<result name="input">/product/patent/modify.jsp</result>
	   	</action>
	   	
		<action name="delete" class="PatentAction" method="delete">
			<result type="json"><param name="root">jsonMap</param></result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>
		
		<action name="toView" class="PatentAction" method="toView">
			<result>/product/patent/view.jsp</result>
			<result name="popView">/product/extIf/popViewPatent.jsp</result>
		</action>
		
		<action name="view" class="PatentAction" method="view">
			<result type="json"><param name="root">jsonMap</param></result>
		</action>
		
		<action name="prev" class="PatentAction" method="prev">
			<result type="redirectAction">
				<param name="actionName">view</param>
				<param name="entityId">${entityId}</param>
			</result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>
		
		<action name="next" class="PatentAction" method="next">
			<result type="redirectAction">
				<param name="actionName">view</param>
				<param name="entityId">${entityId}</param>
			</result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>
		
		<action name="toAudit" class="PatentAction" method="toAudit">
			<result>/product/popAudit.jsp</result>
		</action>
		
		<action name="audit" class="PatentAction" method="audit">
			<result type="json"><param name="root">jsonMap</param></result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>
		
		<action name="viewAudit" class="PatentAction" method="viewAudit">
			<result>/product/popViewAudit.jsp</result>
		</action>
	
		<action name="toAddApply" class="PatentAction" method="toAddApply">
			<result>/product/popAddApply.jsp</result>
		</action>
		
		<action name="toModifyApply" class="PatentAction" method="toModifyApply">
			<result>/product/popModifyApply.jsp</result>
		</action>
		
	    <action name="download" class="PatentAction" method="download">
      		<result type="stream">   		 
 				<param name="inputName">targetFile</param> 
 				<param name="bufferSize">4096</param>
 				<param name="contentType">application/octet-stream</param>
	 			<param name="contentDisposition">attachment;fileName="${fileFileName}"</param>  
	 		</result>
	 	</action>
	 	
	   	<action name="validateFile" class="PatentAction" method="validateFile">
   			<result type="json"><param name="root">jsonMap</param></result>
	   		<result type="json" name="input"><param name="root">jsonMap</param></result>	
	  	 </action>

	   	<action name="exAdd" class="PatentAction" method="exAdd">
   			<result type="json"><param name="root">jsonMap</param></result>
	   		<result type="json" name="input"><param name="root">jsonMap</param></result>	
	   	</action>
	   	
	</package>
</struts>