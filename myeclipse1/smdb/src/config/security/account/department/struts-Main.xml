<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<package name="accountDepartmentMain" extends="main" namespace="/account/department/main">
		
		<action name="toAdd" class="accountDepartmentMainAction" method="toAdd">
			<result>/security/account/department/main/add.jsp</result>
		</action>

		<action name="add" class="accountDepartmentMainAction" method="add">
			<result type="redirectAction">
				<param name="actionName">toView</param>
				<param name="entityId">${entityId}</param>
				<param name="pageInfo">${pageInfo}</param>
			</result>
			<result name="input">/security/account/department/main/add.jsp</result>
			
		</action>
		
		<action name="toModify" class="accountDepartmentMainAction" method="toModify">
			<result>/security/account/department/main/modify.jsp</result>
		</action>

		<action name="modify" class="accountDepartmentMainAction" method="modify">
			<result type="redirectAction">
				<param name="actionName">toView</param>
				<param name="entityId">${entityId}</param>
				<param name="update">1</param>
			</result>
			<result name="input">/security/account/department/main/modify.jsp</result>
		</action>
		
		<action name="toView" class="accountDepartmentMainAction" method="toView">
			<result>/security/account/department/main/view.jsp</result>
		</action>
		
		<action name="view" class="accountDepartmentMainAction" method="view">
			<result type="json"><param name="root">jsonMap</param></result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>

		<action name="delete" class="accountDepartmentMainAction" method="delete">
			<result type="json"><param name="root">jsonMap</param></result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>

		<action name="toList" class="accountDepartmentMainAction" method="toList">
			<result>/security/account/department/main/list.jsp</result>
		</action>
		
		<action name="list" class="accountDepartmentMainAction" method="list">
			<result type="json"><param name="root">jsonMap</param></result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>
		
		<action name="simpleSearch" class="accountDepartmentMainAction" method="simpleSearch">
			<result type="chain">list</result>
		</action>
		
<!-- 		<action name="toAdvSearch" class="accountDepartmentMainAction" method="toAdvSearch"> -->
<!-- 			<result>/security/account/department/main/advSearch.jsp</result> -->
<!-- 		</action> -->
		
		<action name="advSearch" class="accountDepartmentMainAction" method="advSearch">
			<result type="chain">list</result>
		</action>
		
		<action name="sort" class="accountDepartmentMainAction" method="sort">
			<result type="chain">list</result>
		</action>
		
		<action name="changePageSize" class="accountDepartmentMainAction" method="changePageSize">
			<result type="chain">list</result>
		</action>
		
		<action name="toPage" class="accountDepartmentMainAction" method="toPage">
			<result type="chain">list</result>
		</action>
		
		<action name="prev" class="accountDepartmentMainAction" method="prev">
			<result type="redirectAction">
				<param name="actionName">view</param>
				<param name="entityId">${entityId}</param>
			</result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>

		<action name="next" class="accountDepartmentMainAction" method="next">
			<result type="redirectAction">
				<param name="actionName">view</param>
				<param name="entityId">${entityId}</param>
			</result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>
		
		<action name="toEnable" class="accountDepartmentMainAction" method="toEnable">
			<result>/security/account/popEnable.jsp</result>
		</action>

		<action name="enable" class="accountDepartmentMainAction" method="enable">
			<result type="json"><param name="root">jsonMap</param></result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>

		<action name="disable" class="accountDepartmentMainAction" method="disable">
			<result type="json"><param name="root">jsonMap</param></result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>
		
		<action name="toAssignRole" class="accountDepartmentMainAction" method="toAssignRole">
			<result>/security/account/popAssignRole.jsp</result>
		</action>

		<action name="assignRole" class="accountDepartmentMainAction" method="assignRole">
			<result type="json"><param name="root">jsonMap</param></result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>
		
		<action name="retrieveCode" class="accountDepartmentMainAction" method="retrieveCode">
			<result type="json"><param name="root">jsonMap</param></result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>
		
		<action name="toModifyPassword" class="accountDepartmentMainAction" method="toModifyPassword">
			<result>/security/account/popModifyPassword.jsp</result>
		</action>
		
		<action name="modifyPassword" class="accountDepartmentMainAction" method="modifyPassword">
			<result>/security/account/popModifyPassword.jsp</result>
			<result name="input">/security/account/popModifyPassword.jsp</result>
		</action>
		
		<!-- 对外接口 -->
		<action name="extIfToAdd" class="accountDepartmentMainAction" method="extIfToAdd">
			<result>/security/account/extIf/popAdd.jsp</result>
		</action>
		
		<action name="extIfAdd" class="accountDepartmentMainAction" method="extIfAdd">
			<result type="json"><param name="root">jsonMap</param></result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>

	</package>

</struts>