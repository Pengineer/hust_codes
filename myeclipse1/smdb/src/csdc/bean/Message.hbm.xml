<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="csdc.bean.Message" table="T_MESSAGE" >
        <id name="id" type="java.lang.String">
            <column name="C_ID" length="40" />
            <generator class="uuid.hex" />
        </id>
        <many-to-one name="account" class="csdc.bean.Account" fetch="select">
            <column name="C_ACCOUNT_ID" length="40" />
        </many-to-one>
        <many-to-one name="type" class="csdc.bean.SystemOption" fetch="select">
            <column name="C_TYPE_ID" length="40" />
        </many-to-one>
        <many-to-one name="replyTopic" class="csdc.bean.Message" fetch="select">
            <column name="C_REPLY_TOPIC_ID" length="40" />
        </many-to-one>
        <many-to-one name="replyMessage" class="csdc.bean.Message" fetch="select">
            <column name="C_REPLY_MESSAGE_ID" length="40" />
        </many-to-one>
        <property name="authorName" type="java.lang.String">
            <column name="C_AUTHOR_NAME" length="200" not-null="true" />
        </property>
        <property name="title" type="java.lang.String">
            <column name="C_TITLE" length="200" not-null="true" />
        </property>
        <property name="content" type="java.lang.String">
            <column name="C_CONTENT" />
        </property>
        <property name="dfs" type="java.lang.String">
            <column name="C_DFS" length="200" />
        </property>
        <property name="createDate" type="java.sql.Timestamp">
            <column name="C_CREATE_DATE" length="7" not-null="true" />
        </property>
        <property name="isOpen" type="java.lang.Integer">
        	<column name="C_IS_OPEN" precision="1" scale="0" not-null="true" />
        </property>
        <property name="sendEmail" type="java.lang.Integer">
        	<column name="C_SEND_EMAIL" precision="1" scale="0" />
        </property>
        <property name="email" type="java.lang.String">
            <column name="C_EMAIL" length="200" />
        </property>
        <property name="phone" type="java.lang.String">
            <column name="C_PHONE" length="200" />
        </property>
        <property name="ip" type="java.lang.String">
            <column name="C_IP" length="40" />
        </property>
        <property name="log" type="java.lang.String">
            <column name="C_LOG" length="4000" />
        </property>
        <property name="viewCount" type="java.lang.Integer">
        	<column name="C_VIEW_COUNT" precision="10" scale="0" />
        </property>
         <property name="auditStatus" type="java.lang.Integer">
        	<column name="C_AUDIT_STATUS" precision="1" scale="0" not-null="true" />
        </property>
        <property name="sourceType" type="java.lang.Integer">
        	<column name="C_SOURCE_TYPE" precision="1" scale="0" />
        </property>
        <property name="pictureUrl" type="java.lang.String">
        	<column name="C_PICTURE_URL" precision="1" scale="0" />
        </property>
        <set name="messageForReplyTopic" inverse="true" cascade="all">
        	<key>
        		<column name="C_REPLY_TOPIC_ID" length="40" />
        	</key>
        	<one-to-many class="csdc.bean.Message" />
        </set>
        <set name="messageForReplyMessage" inverse="true" cascade="all">
        	<key>
        		<column name="C_REPLY_MESSAGE_ID" length="40" />
        	</key>
        	<one-to-many class="csdc.bean.Message" />
        </set>
    </class>
</hibernate-mapping>