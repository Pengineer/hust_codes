.portal_top_bar {background:url(../image/portal_top_bg.jpg) no-repeat; width:100%; height:113px; overflow:hidden;}
.portal_top_logo .ico {margin:10px 10px 0 20px;}
.portal_top_logo .txt {margin:10px 10px 0 10px;}

/*导航条*/
.recruit_nav {
  background: url("../image/t_bg01.gif") repeat-x scroll 0% 0% transparent;
  height: 30px;
  font-size: 18px;
  font-weight: bold;
  color: #fff;
}
.recruit_nav ul {
  margin:0;
  list-style-type: none;
}
.recruit_nav ul li {
  float: left;
  position: relative;
}
.recruit_nav ul li a {
  display: block;
  color: #fbfefe;
  padding: 4px 30px;
  border-right: 1px solid #aaa;
  text-decoration: none;
}
.recruit_nav ul li a:hover {
  background: #badae0;
  color: #454780;
  text-decoration: none;
}

/*整体版块样式*/
.content_right {
	background:#f4f4f4;
	margin:5px 0 10px 250px;
	padding:10px 0 2px;
	border:1px solid ##f4f4f4; 
	width:740px;
	min-height:487px;
}
/*公用样式*/
.form_title {
	font-weight: bold;
}
.emphasize {
	color: #f00;
}
.font_small {
