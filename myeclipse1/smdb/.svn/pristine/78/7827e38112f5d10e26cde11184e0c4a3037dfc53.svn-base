/*联系我们*/
.joinLinks_box {background:#ebebeb;float:left; border:1px solid #ebebeb; width: 240px;clear:left;height:350px;margin-top:5px;}
.joinLinks_box ul li {margin-top:15px;}

.join-links_header p {
  font-size:18px; 
  font-weight:bold;
  color:#a882ab; 
  text-align: center;
}
.join-links_content ul li {
      font-size: 12px;
