/*职位申请页面*/
.recruit_input_area_login {}
.Applicant_input_area {
  position:relative;
  font-size: 15px;
  margin: 40px 50px 10px;
}
.recruit_input_area_login ul {
	margin: 50px 90px 0;
}
.recruit_input_area_login ul li,
.Applicant_input_area ul li {
  position:relative;
  margin:15px auto;
}
.recruit_btn_box {
  margin: 30px 120px 0;
}
.recruit_btn_box input {
	display: inline-block;
	margin-left:20px;
}
.recruit_btn_box_self {
  margin-left: 200px ;
}
.recruit_btn_box_apply {
	margin-left: 300px;
}
.recruit_btn_box_self input
.recruit_btn_box_apply input {
	display: inline-block;
	margin-left:20px;
}
#recruit_apply_selfInfo {background:#ebebeb;position: relative;margin: 0 50px 0;padding: 10px 0 15px;}
#recruit_apply_selfInfo ul{margin:0 0 0 100px;font-size:16px;line-height:28px;}
#recruit_apply_selfInfo ul span {width:105px;display:inline-block;}
#recruit_apply_selfInfo ul span.emphasize {width:20px;display:inline-block;}
#recruit_apply_selfInfo ul input {height:20px;width:200px;}
#recruit_apply_selfInfo ul select {height:20px;width:120px;}

.btn1 {
	display:inline-block;
	margin-left:50px;
}
/*职位列表*/
.join_content_head p {
  margin: 10px 10px 5px;
  font-size: 15px;
  color:#555;
}
hr {
	border: 1px solid #aaa;
}
table.job_table {
  margin: 25px 20px 10px;
  color: #555;
}
table.job_table thead td {
  padding: 2px 5px;
  text-align: center;
}
table.job_table tbody td {
  font-size: 14px;
  padding: 5px 10px;
  text-align: center;
}
table.job_table tbody a {
  text-decoration: none;
}

