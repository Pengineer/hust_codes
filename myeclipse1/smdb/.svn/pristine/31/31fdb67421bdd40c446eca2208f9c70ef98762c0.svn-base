html,
body {
    height: 100%;
    background: #f0efed;
    font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;
}

a,
button,
p,
span {
    -webkit-font-smoothing: antialiased;
}

.container {
    min-width: 100%;

}

.navbar {
    height: 4rem;
    color: #fff;
    background: #6171AC;
    border-bottom: 1px solid #21897d;
    display: -webkit-box;
    display: -ms-flexbox;
    position: relative;
    color:#fff;
}

.nav-title {
    display: block;
    -webkit-box-flex: 1;
    -ms-flex: 1;
    font-size: 2.2rem;
    font-weight: lighter;
    text-align: center;
    line-height: 4rem;
    margin: 0;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}

.cover {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #000;
    opacity: .7;
    z-index: 103;
}

.wechat-tips {
    position: fixed;
    top: 10px;
    right: 0;
    width: 100%;
    text-align: right;
    z-index: 103;
    padding-top: 14px;
    box-sizing: border-box;
}

.wechat-tips span {
    text-align: left;
    vertical-align: middle;
    font-size: 16px;
    color: #fff;
    margin-right: 10px;
    font-weight: 700;
    line-height: 30px;
    display: inline-block;
}

.wechat-tips img {
    width: 50px;
    display: inline-block;
    vertical-align: middle;
    margin-bottom: 13px;
    margin-right: 10px;
}

.content-wrapper {
    display: table;
    text-align: center;
    height: 100%;
    width: 100%;
    min-height: 400px;
    min-width: 250px;
    box-sizing: border-box;
}

.content {
    /* display: table-cell; */
    vertical-align: middle;
    color: #fff;
    position: relative;
    color: gray;
}

.content p {
    margin: 0;
    padding: 0;
}

