.logo{
	margin-top:30px;
}

.update-info {
    padding: 0 10px;
}

.update-info span {
    font-size: 1.3rem;
}

.content .title {
    font-size: 2rem;
    margin: 0;
}

.download-container {
    margin-top: 50px;
}

#download {
    width: 220px;
    color: #fff;
    font-size: 1.6rem;
    background: #6171AC;
}

.footer {
    height: 40px;
    text-align: center;
    line-height: 40px;
}

.footer a {
    text-decoration: none;
}

.hide {
    display: none;
}

@media (min-width: 400px) {
    .wechat-tips span {
        margin-right: 15px;
    }
    .wechat-tips img {
        margin-right: 20px;
    }
}
