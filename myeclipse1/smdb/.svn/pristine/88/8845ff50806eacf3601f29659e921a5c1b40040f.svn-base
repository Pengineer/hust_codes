<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<package name="applicant" extends="main" namespace="/management/recruit/applicant">

		<action name="toList" class="applicantAction" method="toList">
			<result>/management/recruit/applicant/list.jsp</result>
		</action>
		
		<action name="list" class="applicantAction" method="list">
			<result type="json"><param name="root">jsonMap</param></result>
		</action>
		
		<action name="simpleSearch" class="applicantAction" method="simpleSearch">
			<result type="chain">list</result>
		</action>
		
		<action name="advSearch" class="applicantAction" method="advSearch">
			<result type="chain">list</result>
		</action>
		
		<action name="sort" class="applicantAction" method="sort">
			<result type="chain">list</result>
		</action>

		<action name="changePageSize" class="applicantAction" method="changePageSize">
			<result type="chain">list</result>
		</action>

		<action name="toPage" class="applicantAction" method="toPage">
			<result type="chain">list</result>
		</action>
		
		<action name="toView" class="applicantAction" method="toView">
			<result>/management/recruit/applicant/view.jsp</result>
		</action>
		
		<action name="view" class="applicantAction" method="view">
			<result type="json"><param name="root">jsonMap</param></result>
		</action>
		
		<action name="toVerify" class="applicantAction" method="toVerify">
			<result>/management/recruit/applicant/verify.jsp</result>
		</action>
		
		<action name="verify" class="applicantAction" method="verify">
			<result type="redirectAction">
				<param name="actionName">view</param>
				<param name="entityId">${entityId}</param>
			</result>
		</action>
		
		<action name="validateFile" class="applicantAction" method="validateFile">
	   		<result type="json"><param name="root">jsonMap</param></result>
	  	</action>
	  	
	  	<action name="prev" class="applicantAction" method="prev">
			<result type="redirectAction">
				<param name="actionName">view</param>
				<param name="entityId">${entityId}</param>
			</result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>

		<action name="next" class="applicantAction" method="next">
			<result type="redirectAction">
				<param name="actionName">view</param>
				<param name="entityId">${entityId}</param>
			</result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>
		
		<action name="download" class="applicantAction" method="download">
			<result type="stream">
		 	    <param name="inputName">targetFile</param>
		 	    <param name="contentType">application/msword</param>
		 	    <param name="bufferSize">10240*1024</param> 
		 	    <param name="contentDisposition">attachment;fileName="${filePath}"</param>  
	 	  	</result>
	 	</action>
	</package>
</struts>