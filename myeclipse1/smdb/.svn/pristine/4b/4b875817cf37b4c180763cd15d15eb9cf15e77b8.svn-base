<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<package name="passport" extends="main" namespace="/passport">
		
		<action name="delete" class="passportAction" method="delete">
			<result type="json"><param name="root">jsonMap</param></result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>
	
		<action name="toList" class="passportAction" method="toList">
			<result>/security/passport/list.jsp</result>
		</action>
		
		<action name="toView" class="passportAction" method="toView">
			<result>/security/passport/view.jsp</result>
		</action>
		
		<action name="view" class="passportAction" method="view">
			<result type="json"><param name="root">jsonMap</param></result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>
		
		<action name="list" class="passportAction" method="list">
			<result type="json"><param name="root">jsonMap</param></result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>
		
		<action name="simpleSearch" class="passportAction" method="simpleSearch">
			<result type="chain">list</result>
		</action>
	
		<action name="advSearch" class="passportAction" method="advSearch">
			<result type="chain">list</result>
		</action>
		
		<action name="sort" class="passportAction" method="sort">
			<result type="chain">list</result>
		</action>
		
		<action name="changePageSize" class="passportAction" method="changePageSize">
			<result type="chain">list</result>
		</action>
		
		<action name="toPage" class="passportAction" method="toPage">
			<result type="chain">list</result>
		</action>
		
		<action name="prev" class="passportAction" method="prev">
			<result type="redirectAction">
				<param name="actionName">view</param>
				<param name="entityId">${entityId}</param>
			</result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>

		<action name="next" class="passportAction" method="next">
			<result type="redirectAction">
				<param name="actionName">view</param>
				<param name="entityId">${entityId}</param>
			</result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>
		<action name="retrieveCode" class="passportAction" method="retrieveCode">
			<result type="json"><param name="root">jsonMap</param></result>
			<result name="input" type="json"><param name="root">jsonMap</param></result>
		</action>
		
		<action name="toModifyPassword" class="passportAction" method="toModifyPassword">
			<result>/security/account/popModifyPassword.jsp</result>
		</action>
		
		<action name="modifyPassword" class="passportAction" method="modifyPassword">
			<result>/security/account/popModifyPassword.jsp</result>
			<result name="input">/security/account/popModifyPassword.jsp</result>
		</action>
		
		<action name="toModify" class="passportAction" method="toModify">
			<result>/security/passport/modify.jsp</result>
		</action>
		<action name="modify" class="passportAction" method="modify">
			<result type="redirectAction">
				<param name="actionName">toView</param>
				<param name="entityId">${entityId}</param>
				<param name="update">1</param>
			</result>
			<result name="input">/security/passport/modify.jsp</result>
		</action>

	</package>

</struts>